<div id="addShift" class="modal fade" >
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h5 class="modal-title" id="myLargeModalLabel">
                    Giao ca - giao tiền
                </h5>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-4 control-label"> Tiền giao ca</label>
                        <label class="col-sm-7 control-label text-right"  ><b>{{Shift.OpenAmount|number}} </b> </label>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1"> Tiền chênh lệch </label>
                        <div class="col-sm-7">
                            <input type="text" placeholder="Tiền chênh lệch" class="form-control">
                        </div>
                       
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1"> Nhận ca </label>
                        <div class="col-sm-7">
                            <select class="form-control" ng-options="row.Id as row.Email  for row in Users" ng-model="Shift.UserId" ng-change="ChangCalculatorMode()">
                                <option value="">-- Chọn tài khoản --</option>
                            </select>
                        </div>
                       
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1"> Mật khẩu </label>
                        <div class="col-sm-7">
                            <input type="password" id="form-field-1" ng-model="Shift.Password" placeholder="Nhập mật khẩu" class="form-control">
                        </div>
                       
                    </div>


                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1"> Ghi chú </label>
                        <div class="col-sm-7">
                            <textarea  placeholder="" ng-model="Shift.Notes" class="form-control"></textarea>
                        </div>
                    </div>
                    

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" ng-click="AddOrUpdateShift()">Lưu</button>
                <button type="button" class="btn btn-default active" data-dismiss="modal">Hủy</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>