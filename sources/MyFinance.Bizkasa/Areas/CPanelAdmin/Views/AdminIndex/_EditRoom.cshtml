
<div id="EditRoom" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myLargeModalLabel">Cập nhật thông tin phòng</h4>
            </div>
            <div class="modal-body form-horizontal ">
                <div class="">
                    <div class="row">
                        <div class="col-xs-12 ">
                            <div class="form-group">
                                <label for="txtgiaphong1" class="col-sm-3 control-label">
                                    Tên Phòng:
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" id="txtgiaphong1" class="col-sm-9 col-xs-10 input-sm" placeholder="Tên Phòng" ng-model="Room.RoomName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txgiuong" class="col-sm-3 control-label">
                                   Loại phòng:
                                </label>
                                <div class="col-sm-9">
                                    <select ng-model="Room.RoomClassId" ng-options="row.Id as row.Name for row in RoomClassList" class="col-sm-9"></select>
                                    
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txgiuong" class="col-sm-3 control-label">
                                    Tầng/Lầu:
                                </label>
                                <div class="col-sm-9">
                                    <select ng-model="Room.FloorId" ng-options="row.Id as row.Name for row in FloorList" class="col-sm-9"></select>
                                    @*<a> <span class="glyphicon glyphicon-plus-sign" ng-click="popGroupWidget()"></span></a>*@
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary" ng-click="EditRoom()">Cập nhật</button>
                <button type="button" class="btn btn-default active" data-dismiss="modal">Hủy</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>