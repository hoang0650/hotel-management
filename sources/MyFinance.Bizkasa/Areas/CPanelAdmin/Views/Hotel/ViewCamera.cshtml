
@{
    ViewBag.Title = "ViewCamera";
}
@model MyFinance.Domain.BusinessModel.CameraDTO
    @if (Model != null)
    {
        using (@Html.BeginForm("ViewCamera", "Hotel", null, FormMethod.Post))
        {

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2">
                        @Html.HiddenFor(a => a.Link)
                        @Html.HiddenFor(a => a.Username)
                        @Html.HiddenFor(a => a.Password)
                        @Html.HiddenFor(a => a.NumCamera)

                        @Html.DropDownListFor(a => a.CameraCurrentView, (List<SelectListItem>)ViewBag.CameraNos)

                    </div>
                    <div class="col-sm-2">

                        <button type="submit" class="btn btn-primary">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Xem
                        </button>
                    </div>


                </div>
                <div class="form-group">
                    @{ Html.RenderPartial("_objectCamera");}

                </div>

            </div>
                        }
                        }
 