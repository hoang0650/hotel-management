<body class="no-skin" >
    @Html.Action("TopNavigation", "Home");

    <div id="loading" style="display: none;">
        <img src="/Content/V2/images/ajax-loader.gif">
    </div>
    <div class="main-container" id="main-container">
        
        <script type="text/javascript">
            try {
                ace.settings.check('main-container', 'fixed');
            } catch (e) { }
        </script>
        
        @{Html.RenderPartial("_LeftNavigation");}

        <div class="main-content" ng-app="appModule" ng-cloak>
            <div class="main-content-inner">

                @RenderBody()

                <!-- /.page-content -->
            </div>
        </div>
        <!-- /.main-content -->
        @{Html.RenderPartial("_Footer");}

        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div>
    <!-- /.main-container -->
    <!-- basic scripts -->



   @Scripts.Render("~/Areas/CPanelAdmin/Script/bundles/adminjs")
    <script src="~/Areas/CPanelAdmin/Script/Libs/daypilot-all.js"></script>
    <script src="~/Areas/CPanelAdmin/Script/Libs/angular-route.min.js"></script>
    <script src="~/Areas/CPanelAdmin/Script/Libs/hotkeys.js"></script>
    <script src="~/Areas/CPanelAdmin/Script/Libs/appModule.js"></script>
  
   @RenderSection("Scripts", false)
    <script type="text/javascript">      
        
        jQuery(function ($) {
          
            $(function () {
                setNavigation();
               
                    localStorage.setItem('context', '@MyFinance.Utils.WorkContext.BizKasaContext.TokenId');
               
            });

            function setNavigation() {
                var path = window.location.pathname;
                path = path.replace(/\/$/, "");
                path = decodeURIComponent(path);

                $("#menu li a").each(function () {
                    var href = $(this).attr('href');
                    if (path.substring(0, href.length) === href) {
                        $(this).closest("#menu").find("li.active").removeClass('active');
                        $(this).closest("li").addClass('active').closest('ul').parent().addClass('active open');;

                    }
                });
            }

            $('.dd-handle a').on('mousedown', function (e) {
                e.stopPropagation();
            });

            $('[data-rel="tooltip"]').tooltip();

        });
      

    </script>


</body>

</html>
