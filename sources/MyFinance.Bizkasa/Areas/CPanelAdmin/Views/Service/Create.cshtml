<script>
    function BrowseServer() {
        var finder = new CKFinder();
        finder.selectActionFunction = SetFileField;
        finder.popup();
    }

    function SetFileField(fileUrl) {
        $("#ImgURl").val(fileUrl);
        document.getElementById('Image').src = fileUrl;
    }
    function GetCkFinder(Id) {
        var ckfinder = new CKFinder();
        ckfinder.selectActionFunction = function (fileUrl) {
            $("#Img_Thumb" + Id + "").val(fileUrl);
            $("#" + Id + "").attr('src', fileUrl);
        };
        ckfinder.popup();
    }

    var image_row = 0;

    function addImage() {
        var str = '<script> $("#btn_Img_Thumbnail' + image_row + '").click(function () { GetCkFinder("Img_Thumbnail' + image_row + '");});';
        str += "<";
        str += "/script>";

        html = '<div class="profile-activity clearfix" id="image-row' + image_row + '"> <div>';
        html += ' <img class="pull-left" alt=" " id="Img_Thumbnail' + image_row + '"  src="Areas/CPanelAdmin/Content/img/add-image.jpg" style="border: 1px solid #C9D6E5;border-radius:0px;height:45px;width:55px">';
        html += '<input type="text" name="product_image" required id="Img_ThumbImg_Thumbnail' + image_row + '"  placeholder="Link hình ảnh" class="col-xs-10 col-sm-5" readonly style="margin-top:7px">';
        html += '<div class="time"><button class="btn btn-info"  style="margin-left:5px; margin-top:7px"  id="btn_Img_Thumbnail' + image_row + '">Chọn ảnh</button></div></div>';
        html += '<div class="tools action-buttons"><a href="#" onclick="$(\'#image-row' + image_row + '\').remove();" class="red"><i class="ace-icon fa fa-times bigger-120"></i></a>' + str + '</div></div>';

        $('#images').before(html);
        $('#clickalert').remove();
        image_row++;
    }
    $("input").addClass("width-100")
    $(function () {
        $('#Tags').tagsInput({ width: 'auto' });
    });
    $(function () {
        $('#Content').editable({
            inlineMode: false,
            fontList: ["Tahoma, Geneva", "Arial, Helvetica", "Impact, Charcoal"],
            height: 430,
            imageUploadURL: '@Url.Action("FroalaUploadImage", "Topic")',
            imageParams: { postId: "123" },
        });


    });
    function _handleClick_isStatus(cb) {

        setTimeout(function () {
            $("#IsActive").val(cb.checked);
        }, 0);

    }
    function _handleClick_ishome(cb) {

        setTimeout(function () {
            $("#IsHome").val(cb.checked);
        }, 0);

    }
  
</script>