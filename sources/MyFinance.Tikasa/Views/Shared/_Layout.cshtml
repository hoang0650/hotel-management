<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @*<link rel="shortcut icon" type="image/ico" href="@ViewBag.Meta.Favicon" />
        <link rel="icon" type="image/ico" href="@ViewBag.Meta.Favicon" />*@
    <meta http-equiv="content-language" content="vi" />
    <meta name="description" content="@Html.Raw(ViewBag.Description)" />
    <meta name="keywords" content="@Html.Raw(ViewBag.Keywords)" />
    <meta name="robots" content="index, follow" />
    <meta name="geo.region" content="VN-SG" />
    <meta name="geo.placename" content="@Html.Raw(ViewBag.Address)" />
    @*<meta property="og:site_name" content="@Html.Raw(ViewBag.Meta.ApplicationName)" />*@
    <meta property="og:title" content="@Html.Raw(ViewBag.Title)" />
    <meta property="og:description" content="@Html.Raw(ViewBag.Description)" />
    <meta property="og:url" itemprop="url" content='@Request.Url.AbsoluteUri' />
    @*<meta property="og:image" content="@ViewBag.Meta.Seo_Image" />*@
    <meta property="og:type" content="website" />
    <meta property="og:locale" itemprop="inLanguage" content="vi_VN" />
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    @*<link rel="image_src" href="@ViewBag.Meta.Seo_Image" />*@

    @Styles.Render("~/Content/Style")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrap-page home-page">
        @{Html.RenderPartial("_TopHeader"); }
     
            @RenderBody()


        
        
    </div>
    @*<script data-main="/Scripts/App/main.js" src="~/Scripts/require.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (success) {
                    $("#longitude").val(success.coords.longitude);
                    $("#latitude").val(success.coords.latitude);
                });
            } else {
                alert("Geolocation is not supported by this browser.");
            }

            $("#nearBy").click(function (e) {
                e.preventDefault();
                $("#form-nearBy").submit();
            });

        });
    </script>
</body>
</html>
