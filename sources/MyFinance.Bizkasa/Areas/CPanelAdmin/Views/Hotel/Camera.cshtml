@{
    ViewBag.Title = "Quản lý camera";
}

<div class="main-content" ng-app="appModule" ng-controller="HotelController">
    <div class="page-content">

        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div  class="form-horizontal" ng-init="GetCameraByHotel()">
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> Đường dẫn</label>
                        <div class="col-sm-4">
                            <input type="text" ng-model="Camera.Link" placeholder="Url camera" class="form-control">

                        </div>
                        <label class="col-sm-2 control-label no-padding-right">Tổng số Camera </label>
                        <div class="col-sm-4">
                            <input type="text" ng-model="Camera.NumCamera" placeholder="Số camera" class="form-control">
                        </div>

                    </div>


                    <div class="form-group">
                       

                        <label class="col-sm-2 control-label no-padding-right">Tài khoản</label>
                        <div class="col-sm-4">

                            <input type="text" ng-model="Camera.Username" placeholder="Tài khoản" class="form-control">

                        </div>

                        <label class="col-sm-2 control-label no-padding-right">Mật khẩu</label>
                        <div class="col-sm-4">

                            <input type="text" ng-model="Camera.Password" placeholder="mật khẩu" class="form-control">

                        </div>
                       


                    </div>

                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label "> Camera mặc định </label>
                        <div class="col-sm-2">
                            <input type="text" ng-model="Camera.CameraDefault">

                        </div>
                    </div>


                    <div class="col-md-9">

                        <button type="button" class="btn btn-primary" ng-click="InsertOrUpdateCamera()">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Cập nhật
                        </button>

                    </div>
                </div>

            </div>

            
        </div>
        

    </div>
</div>
@section Scripts {
    <script src="~/Areas/CPanelAdmin/Script/Hotel/Hotel.js"></script>
}
