
<div id="CheckInSingle" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabelCheckInSingle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="OrderReset()">×</button>
                <h4 class="modal-title" id="myLargeModalLabelCheckInSingle">Cập nhật dịch vụ phòng - {{Order.RoomName}}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group ">
                            <div class="form-title">
                                Danh sách dịch vụ
                                <a href="#addServiceToOrder" data-toggle="modal">
                                    <i class="icon-plus-add ace-icon icon-plus-sign"></i>
                                </a>
                            </div>
                            <div class="col-sm-12">
                                <table id="simple-table" class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable">
                                    <thead>
                                        <tr>
                                            <th class="center">
                                                <label class="pos-rel">
                                                    <input type="checkbox" class="ace">
                                                    <span class="lbl"></span>
                                                </label>
                                            </th>
                                            <th>Nội dung dịch vụ</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>
                                                Thành tiền
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody ng-repeat="item in Order.Services">
                                        <tr>
                                            <td class="center">
                                                <label class="pos-rel">
                                                    <input type="checkbox" class="ace">
                                                    <span class="lbl"></span>
                                                </label>
                                            </td>

                                            <td>
                                                {{item.Name}}
                                            </td>
                                            <td>{{item.Quantity}}</td>
                                            <td>{{item.Price|number}}</td>
                                            <td>{{item.Quantity*item.Price|number}}</td>


                                            <td>
                                                <div class="hidden-sm hidden-xs btn-group">

                                                    <a ng-click="RemoveSeviceFromOrder($index)">
                                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary" ng-click="UpdateServiceForOrder()">Cập nhật</button>
                <button type="button" class="btn btn-default active" data-dismiss="modal" ng-click="OrderReset()">Hủy</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>