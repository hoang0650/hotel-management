<div id="addInvoice" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h5 class="modal-title" id="myLargeModalLabel">
                    Thông tin hóa đơn
                </h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tên công ty</label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.CompanyName" placeholder="Tên công ty (nếu có)" class="form-control">
                        </div>
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Email </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.Email" placeholder="Email" class="form-control">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Người giao dịch </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.CustomerName" placeholder="Người giao dịch" class="form-control">
                        </div>
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Điện thoại </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.Mobile" placeholder="Điện thoại" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Giảm trừ </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.Deductible" placeholder="Tiền giảm trừ" class="form-control">
                        </div>
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Phụ thu </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.Surcharge" placeholder="Nhập tiền phụ thu" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                       
                      
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Trả trước </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.Prepay" placeholder="Nhập tiền trả trước" class="form-control">
                        </div>
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Địa chỉ </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-1" ng-model="Invoice.Address" placeholder="Địa chỉ" class="form-control">
                        </div>
                    </div>
                  

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Ghi chú </label>
                        <div class="col-sm-9">
                            <textarea id="form-field-1" placeholder="" ng-model="Invoice.Notes" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="form-title">
                            Chi tiết hóa đơn
                            <a href="#addInvoiceDetail" data-toggle="modal">

                                <i class="icon-plus-add ace-icon icon-plus-sign"></i>

                            </a>

                        </div>
                        <div class="col-sm-12">
                            <table id="simple-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Stt</th>
                                        <th>Diễn giải </th>
                                        <th>Số lượng</th>
                                        <th>
                                            Giá
                                        </th>
                                        <th class="hidden-480">Thành tiền</th>

                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody ng-repeat="item in Invoice.InvoiceDetails">
                                    <tr>

                                        <td>{{$index+1}}</td>
                                        <td>
                                            {{item.Descriptions}}
                                        </td>
                                        <td>{{item.Quantity}}</td>
                                        <td> {{item.Price}} </td>
                                        <td>{{item.SubAmount=item.Quantity*item.Price}}</td>

                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">
                                                @*<a ng-click="BindtoEditCustomer(item)">
                            <i class="ace-icon fa fa-pencil bigger-120"></i>
                        </a>*@

                                                <a ng-click="RemoveItemCustomer($index)">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </a>


                                            </div>


                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" ng-click="AddInvoice()">Lưu và đóng</button>
                <button type="button" class="btn btn-default active" data-dismiss="modal">Hủy</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>