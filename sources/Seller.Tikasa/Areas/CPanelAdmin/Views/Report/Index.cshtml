@{
    ViewBag.Title = "Báo cáo tình hình kinh doanh ";
}

<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="~/CPanelAdmin/AdminIndex">Trang chủ</a>
            </li>

            <li>
                <a href="#">Báo cáo - thống kê</a>
            </li>
            <li class="active">
                Tổng quan
            </li>
        </ul><!-- /.breadcrumb -->
    </div>
        <div class="page-content" ng-app="appModule" ng-controller="ReportController">

            <div class="row">

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <div class="widget-box ">
                            <div class="widget-header report ">
                                <h5 class="widget-title col-sm-8">Tình hình kinh doanh từ  <span class="red">{{FromDateView|date:"dd/MM/yyyy"}}</span> đến  <span class="red">{{ToDateView|date:"dd/MM/yyyy"}}</span> </h5>
                                <a class="col-sm-4" data-toggle="modal" href="#PanelTime">
                                    [Chọn thời gian]
                                    <i class="ace-icon fa fa-pencil-square-o"></i>
                                </a>
                            </div>

                            <div class="widget-body">
                                <div class="widget-main">

                                    <div class="dataTables_wrapper" role="grid">
                                        <table class="table table-hover dataTable border" ng-table="tableParams" id="list" ng-init="GetStaticReport()">
                                            <thead>
                                                <tr role="row">
                                                    <th class="width-27px">STT</th>
                                                    <th class="border center">Nội dung</th>
                                                    <th class="center">VNĐ</th>
                                                    <th class="center">Ghi chú</th>

                                                </tr>
                                            </thead>

                                            <tbody style="border-bottom: none;">
                                                <tr style="cursor: pointer;" class="white-bg table-tr-header ">
                                                    <td class="hidden-480">
                                                        1
                                                    </td>
                                                    <td>
                                                        <label> Tổng doanh thu</label> <br />
                                                        <i> (1.1 + 1.2 + 1.3 - 1.4) </i>

                                                    </td>
                                                    <td class="right hidden-480">
                                                        <label>
                                                            {{StaticReport.TotalRecept|number}}
                                                        </label>
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>

                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        1.1
                                                    </td>
                                                    <td>
                                                        Tiền phòng
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Room|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        1.2
                                                    </td>
                                                    <td>
                                                        Tiền dịch vụ
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Service|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        1.3
                                                    </td>
                                                    <td>
                                                        Phụ thu
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Surcharge|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>

                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        1.4
                                                    </td>
                                                    <td>
                                                        Giảm trừ
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Deductible|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>

                                                <tr style="cursor: pointer;" class="table-tr-header">
                                                    <td class="hidden-480">
                                                        2
                                                    </td>
                                                    <td>
                                                        <label> Chi phí</label> <br />
                                                        <i> (2.1 + 2.2 + 2.3 + 2.4 + 2.5) </i>
                                                    </td>
                                                    <td class="right hidden-480">
                                                        <label>
                                                            {{StaticReport.TotalPayment|number}}
                                                        </label>
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        2.1
                                                    </td>
                                                    <td>
                                                        Điện nước
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Electronic+StaticReport.Water|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        2.2
                                                    </td>
                                                    <td>
                                                        Nhập kho
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Stored|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        2.3
                                                    </td>
                                                    <td>
                                                        Tiếp khách
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Recept|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        2.4
                                                    </td>
                                                    <td>
                                                        Chi cước Internet
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Internet|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                                <tr style="cursor: pointer;" class="oddrow">
                                                    <td class="hidden-480">
                                                        2.5
                                                    </td>
                                                    <td>
                                                        Chi khác
                                                    </td>
                                                    <td class="right hidden-480">
                                                        {{StaticReport.Orther|number}}
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>

                                                <tr style="cursor: pointer;" class="table-tr-header red">
                                                    <td class="hidden-480">
                                                        3
                                                    </td>
                                                    <td>
                                                        <label class="red"> Lợi nhuận</label> <br />
                                                        <i> (1 - 2) </i>
                                                    </td>
                                                    <td class="right hidden-480">
                                                        <label>
                                                            {{StaticReport.TotalAmount|number}}
                                                        </label>
                                                    </td>
                                                    <td class="center"></td>
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="widget-box ">
                            <div class="widget-header ">
                                <h5 class="widget-title ">Top 10 phòng được sử dụng nhiều nhất trong tháng </h5>
                            </div>

                            <div class="widget-body">
                                <div class="widget-main">

                                    <div class="dataTables_wrapper" role="grid" ng-init="GetRoomPopularReport()">
                                        <canvas id="myChart" width="400" height="430"></canvas>

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-6"></div>

                </div>
                <div class="col-sm-12">
                    <div class="widget-box ">
                        <div class="widget-header report ">
                            <h5 class="widget-title col-sm-10">Thống kê doanh thu từ  <span class="red">{{FromDateView|date:"dd/MM/yyyy"}}</span> đến  <span class="red">{{ToDateView|date:"dd/MM/yyyy"}}</span> </h5>
                            <a class="col-sm-2" data-toggle="modal" href="#PanelTime">
                                [Chọn thời gian]
                                <i class="ace-icon fa fa-pencil-square-o"></i>
                            </a>
                        </div>

                        <div class="widget-body">
                            <div class="widget-main">

                                <div class="dataTables_wrapper" role="grid" ng-init="GetReceiptReport()">
                                    <canvas id="ReceiptChart" width="400" height="150"></canvas>




                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

@{ Html.RenderPartial("_PanelTime");  }

@section Scripts {

    <script src="~/Areas/CPanelAdmin/Script/Report/Report.js"></script>
    <link href="~/Areas/CPanelAdmin/Content/fullcalendar/fullcalendar.min.css" rel="stylesheet" />
    <script src="~/Areas/CPanelAdmin/Content/js/daterangepicker.min.js"></script>
    <script src="~/Areas/CPanelAdmin/Content/fullcalendar/moment.js"></script>
<script src="~/Areas/CPanelAdmin/Content/js/Chart.js"></script>

}
