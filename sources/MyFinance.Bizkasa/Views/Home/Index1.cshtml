@{
    ViewBag.Title = "Trang chủ quản lý hệ thống BND.VN";
    
}

<div class="main"  ng-controller="HomeController">
    <section id="content" class="image-bg1">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sm-8 col-md-9">
                    <div class="search-tabs search-tabs-bg search-tabs-abs mt50">
                        <div class="tabbable">
                            <div class="tab-content">

                                <div class="tab-pane fade active in" id="tab-4">
                                    <h2>Đăng ký sử dụng miễn phí</h2>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group form-group-lg form-group-icon-left">
                                                <i class="fa fa-university input-icon"></i>
                                                <label>Tên khách sạn</label>
                                                <input class="form-control" name="start" placeholder="Nhập tên khách sạn của bạn" type="text" ng-model="HotelRegisterModel.Name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-group-lg form-group-icon-left">
                                                <i class="fa fa-user input-icon"></i>
                                                <label>Tài khoản quản lý</label>
                                                <input class="form-control" name="start" placeholder="Tài khoản đăng nhập" type="text" ng-model="HotelRegisterModel.User.Email">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-daterange">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group form-group-lg form-group-icon-left">
                                                    <i class="fa fa-building-o input-icon input-icon-highlight"></i>
                                                    <label>Số tầng</label>
                                                    <input class="form-control" name="start" placeholder="Nhập số tầng" type="text" ng-model="HotelRegisterModel.NumFloors">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group form-group-lg form-group-icon-left">
                                                    <i class="fa fa-home input-icon input-icon-highlight"></i>
                                                    <label>Số phòng</label>
                                                    <input class="time-pick form-control" placeholder="Nhập số phòng" type="text" ng-model="HotelRegisterModel.NumRooms">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group form-group-lg form-group-icon-left">
                                                    <i class="fa fa-unlock input-icon input-icon-highlight"></i>
                                                    <label>Mật khẩu</label>
                                                    <input class="form-control" name="end" placeholder="*******" type="password" ng-model="HotelRegisterModel.User.Password">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group form-group-lg form-group-icon-left">
                                                    <i class="fa fa-unlock input-icon input-icon-highlight"></i>
                                                    <label>Xác nhận mật khẩu</label>
                                                    <input class="time-pick form-control" placeholder="*******" type="password" ng-model="HotelRegisterModel.User.ComfirmPassword">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-lg" type="submit" ng-click="RegisterHotel()">Đăng ký ngay</button>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar col-sm-4 col-md-3">
                    <div class="travelo-box book-with-us-box">
                        <h4>Chúng tôi có gì ?</h4>
                        <ul>
                            <li>
                                <i class="soap-icon-hotel-1 circle"></i>
                                <h5 class="title"><a href="#">Tiện dụng</a></h5>
                                <p>Dễ dàng sử dụng với bất kì ai, không cần hiểu biết nhiều về máy tính</p>
                            </li>
                            <li>
                                <i class="soap-icon-savings circle"></i>
                                <h5 class="title"><a href="#">Tiết kiệm thời gian, chi phí</a></h5>
                                <p>Giảm bớt những chi phí quản lý không cần thiết</p>
                            </li>
                            <li>
                                <i class="soap-icon-support circle"></i>
                                <h5 class="title"><a href="#">Hỗ trợ kịp thời</a></h5>
                                <p>Nhân viên hỗ trợ kịp thời, tận tình.</p>
                            </li>
                        </ul>
                    </div>


                </div>
            </div>
            <div class="contact-address row block">
                <div class="col-md-4">
                    <div class="icon-box style5">
                        <i class="fa fa-phone"></i>
                        <div class="description">
                            <small>Hỗ trợ 24/7</small>
                            <h6>(08) 62 953 953 - 0973 721 723</h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="icon-box style5">
                        <i class="fa fa-envelope-o"></i>
                        <div class="description">
                            <small>Liên hệ qua email</small>
                            <h6>hi@bizkasa.com</h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="icon-box style5">
                        <i class="fa fa-map-marker"></i>
                        <div class="description">
                            <small>Liên hệ trực tiếp</small>
                            <h6>TMA Building CVPM Quang Trung, Q12, HCMC</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

 
   
    <!-- end main content -->
</div>
@section Scripts {
    <script src="~/Scripts/app/Home/Home.js"></script>

}