<div id="addInvoiceShort" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h5 class="modal-title" id="myLargeModalLabel">
                    Chi tiết hóa đơn
                </h5>
            </div>
            <div class="modal-body form-horizontal">
                <div class="row">
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> Số lượng </label>
                        <div class="col-sm-4">
                            <input type="text" id="form-field-1" ng-model="InvoiceDetail.Quantity" placeholder="Số lượng" class="form-control" format="number">
                        </div>
                        <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> Tổng tiền </label>
                        <div class="col-sm-4">
                            <input type="text" id="form-field-1" ng-model="InvoiceDetail.SubAmount" placeholder="Tồng tiền" class="form-control" format="number">
                        </div>
                    </div>              


                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> Ghi chú </label>
                        <div class="col-sm-10">
                            <textarea id="form-field-1" placeholder="" ng-model="InvoiceDetail.Notes" class="form-control"></textarea>
                        </div>
                    </div>
                    

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" ng-click="AddInvoiceShort()">Lưu và đóng</button>
                <button type="button" class="btn btn-default active" data-dismiss="modal">Hủy</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>