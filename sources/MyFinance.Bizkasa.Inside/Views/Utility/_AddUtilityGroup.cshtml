
 <!-- Primary modal -->
<div id="AddUtilityGroup" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Thêm mới nhóm tiện ích</h6>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- Basic layout-->
                        <form action="#" class="form-horizontal">
                            <div class="panel panel-flat">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label">Tên:</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" placeholder="Nhập tên tiện ích" ng-model="Group.Name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary" ng-click="AddOrUpdateUtilityGroup()">Thêm nhóm <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        </form>
                        <!-- /basic layout -->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer" ng-init="GetUtilityGroups()">
                            <div class="datatable-scroll">
                                <table class="table datatable-show-all dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc">Mã</th>
                                            <th class="sorting">Tên nhóm</th>
                                            <th class="sorting">Tình trạng</th>
                                            <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 100px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr role="row" class="odd" ng-repeat="row in Groups">
                                            <td>{{row.Id}}</td>
                                            <td class="hidden-480">
                                                <label class="no-padding-left">
                                                    {{row.Name}}
                                                </label>

                                            </td>
                                            <td class="hidden-480">
                                                <label class="no-padding-left">
                                                    {{row.IsDeleted?"Đang ẩn":"Hoạt động"}}
                                                </label>
                                            </td>

                                            <td class="text-center">
                                                <ul class="icons-list">
                                                    <li><a href="#" data-popup="tooltip" title="" data-original-title="Edit"><i class="icon-pencil7"></i></a></li>
                                                    <li><a href="#" data-popup="tooltip" title="" data-original-title="Remove"><i class="icon-trash"></i></a></li>
                                                    <li><a href="#" data-popup="tooltip" title="" data-original-title="Options"><i class="icon-cog7"></i></a></li>
                                                </ul>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>
            </div>

          
        </div>
    </div>
</div>
<!-- /primary modal -->
