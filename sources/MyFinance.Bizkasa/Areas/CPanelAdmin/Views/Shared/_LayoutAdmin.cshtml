    <title>@ViewBag.Title</title>
    <meta name="description" content="overview &amp; stats" />
    <meta name="viewport" content="width=1190" />
    <link rel="bizkasa icon" href="/Content/V2/images/favicon.ico" />
    <!-- bootstrap & fontawesome -->
    @Styles.Render("~/Areas/CPanelAdmin/Content/admincss");
  
    
    <style type="text/css">
        .ace-main-stylesheet {
        }
    </style>
    <script>
