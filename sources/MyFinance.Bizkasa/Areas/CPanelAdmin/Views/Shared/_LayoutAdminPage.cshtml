    <!-- basic scripts -->



    <script type="text/javascript">
        window.jQuery || document.write("<script src='~/Areas/CPanelAdmin/Content/js/jquery.min.js'>" + "<" + "/script>");
    </script>

    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='~/Areas/CPanelAdmin/Content/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <script src="~/Areas/CPanelAdmin/Content/js/bootstrap.min.js"></script>

    <!-- page specific plugin scripts -->

    <script src="~/Areas/CPanelAdmin/Content/zclip/zclip.js"></script>
    <script src="~/Areas/CPanelAdmin/Content/js/jquery.colorbox.min.js"></script>
    <script src="~/Areas/CPanelAdmin/Content/js/jquery.gritter.min.js"></script>
    <script src="~/Areas/CPanelAdmin/Content/js/bootstrap-editable.min.js"></script>
    <script src="~/Areas/CPanelAdmin/Content/js/ace-editable.min.js"></script>
    	<script src="~/Areas/CPanelAdmin/Content/js/jquery-ui.custom.min.js"></script>
		<script src="~/Areas/CPanelAdmin/Content/js/jquery.ui.touch-punch.min.js"></script>
