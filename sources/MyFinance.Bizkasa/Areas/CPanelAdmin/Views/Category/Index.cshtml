
@{
    ViewBag.Title = "Quản lý Loại phòng";
}

<!-- Page Content -->
<div class="page-content" ng-app="crudModule" ng-controller="CategoryController">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/pk_admin">Home</a>
            </li>
            <li>
                <a href="/pk_admin/tin-tuc">Danh sách loại phòng</a>
            </li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Header -->
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                Danh sách loại phòng
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="#">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- /Page Header -->
    <!-- Page Body -->
    <div class="page-body">
        <div class="row">

            <div class="col-xs-12 col-md-12">
                <div class="widget">
                    <div class="widget-header ">
                        <span class="widget-caption"><a href="javascript:" class="btn btn-primary btn-sm" ng-click="pop()"><i class="fa fa-plus"></i> Add</a> | <button onclick="DeleteMutiple('/pk_admin/TinTuc/DeleteMultile'); return false;" class="btn btn-danger btn-sm"><i class="fa fa-times"></i> Delete</button> </span>
                        <div class="widget-buttons">
                            <a href="#" data-toggle="maximize">
                                <i class="fa fa-expand"></i>
                            </a>
                            <a href="#" data-toggle="collapse">
                                <i class="fa fa-minus"></i>
                            </a>
                            <a href="#" data-toggle="dispose">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <table class="table table-striped table-bordered table-hover" id="simple">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <div class="checker"><span class=""><input type="checkbox" class="group-checkable" data-set="#flip .checkboxes"></span></div>
                                    </th>
                                    <th>
                                        Loại Phòng
                                    </th>
                                    <th>
                                        Giá phòng
                                    </th>
                                    <th class="text-center">
                                        Cài đặt giá
                                    </th>

                                    <th class="text-center">
                                       Quy định phụ thu
                                    </th>
                                    <th class="text-center">
                                        SL.Người
                                    </th>
                                    <th class="text-center">
                                        SL.Giường
                                    </th>
                                    <th class="text-center">
                                       Ghi chú
                                    </th>
                                    <th>
                                       Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody data-ng-repeat="stud in Categories">

                                <tr>
                                    <td>
                                        <div class="checker" style="min-width:15px;"><span class=""><input type="checkbox" class="checkboxes" name="Id_group" value=""></span></div>
                                    </td>
                                    <td>
                                        {{stud.Name}}
                                    <td>
                                        {{stud.Email}}
                                    </td>
                                    <td class="text-center">
                                        {{stud.Phone}}
                                    </td>

                                    <td>
                                        {{stud.Name}}
                                    </td>
                                    <td class="center ">
                                        <a id="bootbox-options" ng-click="pop(stud.Id)" href="javasctipt:">AddUser</a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- /Page Body -->


    <div id="AddCate" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myLargeModalLabel">Thêm mới loại phòng</h4>
                </div>
                <div class="modal-body">
                   
                    <div class="widget-body">
                        <div class="row">


                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="row">
                                    <div class="col-lg-2 col-sm-2 col-xs-2 ">
                                        <div class="form-group">
                                            <label for="txtgiaphong1">
                                                Loại phòng
                                            </label>
                                            <input type="text" id="txtgiaphong1" class="form-control input-xs" placeholder="Loại phòng" ng-model="Roomtype.Name">


                                        </div>
                                        <div class="form-group">
                                            <label for="txgiuong">
                                                Số giường
                                            </label>
                                            <input type="text" id="txgiuong" class="form-control input-xs" placeholder="Số giường" ng-model="Roomtype.NumBed">

                                        </div>
                                        <div class="form-group">
                                            <label for="txnguoi">
                                                Số người
                                            </label>
                                            <input type="text" id="txnguoi" class="form-control input-xs" placeholder="Số người" ng-model="Roomtype.NumCustomer">

                                        </div>

                                        <div class="form-group">
                                            <label for="txgiangay">
                                                Giá theo ngày
                                            </label>
                                            <input type="text" id="txgiangay" class="form-control input-xs" placeholder="Giá theo ngày" ng-model="Roomtype.PriceByDay">

                                        </div>


                                        <div class="form-group">
                                            <label for="txgiadem">
                                                Giá qua đêm
                                            </label>
                                            <input type="text" id="txgiadem" class="form-control input-xs" placeholder="Giá qua đêm" ng-model="Roomtype.PriceByNight">

                                        </div>

                                        <div class="form-group">
                                            <label for="txgiathang">
                                                Giá theo tháng
                                            </label>
                                            <input type="text" id="txgiathang" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="Roomtype.PriceByMonth">

                                        </div>
                                    </div>

                                    <div class="col-lg-5 col-sm-5 col-xs-5">
                                        <div class="widget">
                                            <div class="widget-header">
                                                <span class="widget-caption" ng-click="CheckoutDayclick()">
                                                    <i class="glyphicon glyphicon-plus-sign"></i>
                                                    Phụ thu quá giờ Checkout (theo ngày)
                                                </span>
                                            </div>
                                            <div class="widget-body">
                                                <div class="form-inline" ng-repeat="a in CheckoutDayList">
                                                    <span class="text"> Quá</span>
                                                    <div class="form-group">
                                                        <select class="form-control input-short input-xs " ng-change="CheckoutDaySelectedclick($index)" ng-model="a.Key" ng-options="hour.Name for hour in a.Hours"></select>
                                                    </div>
                                                    <div class="form-group">

                                                        <input type="text" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="a.Value">


                                                    </div>
                                                    <div class="form-group">

                                                        <a href="#" class="btn btn-default  btn-circle btn-xs smaller" ng-click="CheckoutDayRemoveclick($index)">
                                                            <i class="glyphicon glyphicon-remove"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="widget">
                                            <div class="widget-header">
                                                <span class="widget-caption" ng-click="CheckoutNightclick()">
                                                    <i class="glyphicon glyphicon-plus-sign"></i>
                                                    Phụ thu quá giờ Checkout (theo đêm)
                                                </span>
                                            </div>
                                            <div class="widget-body">
                                                <div class="form-inline" ng-repeat="a in CheckoutNightList">
                                                    <div class="form-group">
                                                        <span class="text">Quá</span>
                                                        <select class="form-control input-short input-xs " ng-change="CheckoutNightSelectedclick($index)" ng-model="a.Key" ng-options="hour.Name for hour in a.Hours"></select>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="text" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="a.Value">

                                                    </div>
                                                    <div class="form-group">

                                                        <a href="#" class="btn btn-default  btn-circle btn-xs smaller" ng-click="CheckoutNightRemoveclick($index)">
                                                            <i class="glyphicon glyphicon-remove"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="widget">
                                            <div class="widget-header">
                                                <span class="widget-caption" ng-click="PriceByDayclick()">
                                                    <i class="glyphicon glyphicon-plus-sign"></i>
                                                    Giá bán theo giờ
                                                </span>
                                            </div>
                                            <div class="widget-body">
                                                <div class="form-inline" ng-repeat="a in PriceByDayList">
                                                    <div class="form-group">
                                                        <select class="form-control input-short input-xs " ng-change="PriceByDaySelectedclick($index)" ng-model="a.Key" ng-options="hour.Name for hour in a.Hours"></select>
                                                    </div>
                                                    <div class="form-group">

                                                        <input type="text" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="Name">


                                                    </div>
                                                    <div class="form-group">

                                                        <a href="#" class="btn btn-default  btn-circle btn-xs smaller" ng-click="PriceByDayRemoveclick($index)">
                                                            <i class="glyphicon glyphicon-remove"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-5 col-sm-5 col-xs-5">
                                        <div class="widget">
                                            <div class="widget-header">
                                                <span class="widget-caption" ng-click="CheckinDayclick()">
                                                    <i class="glyphicon glyphicon-plus-sign"></i>
                                                    Phụ thu  Checkin sớm (theo ngày)
                                                </span>
                                            </div>
                                            <div class="widget-body">
                                                <div class="form-inline" ng-repeat="a in CheckinDayList">
                                                    <div class="form-group">
                                                        <span class="text">Quá</span>
                                                        <select class="form-control input-short input-xs " ng-change="CheckinDaySelectedclick($index)" ng-model="a.Key" ng-options="hour.Name for hour in a.Hours"></select>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="text" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="a.Value">

                                                    </div>
                                                    <div class="form-group">

                                                        <a href="#" class="btn btn-default  btn-circle btn-xs smaller" ng-click="CheckinDayRemoveclick($index)">
                                                            <i class="glyphicon glyphicon-remove"></i>
                                                        </a>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="widget">
                                            <div class="widget-header">
                                                <span class="widget-caption" ng-click="CheckinNightclick()">
                                                    <i class="glyphicon glyphicon-plus-sign"></i>
                                                    Phụ thu  Checkin sớm (theo đêm)
                                                </span>
                                            </div>
                                            <div class="widget-body">
                                                <div class="form-inline" ng-repeat="a in CheckinNightList">
                                                    <div class="form-group">
                                                        <span class="text">Quá</span>
                                                        <select class="form-control input-short input-xs " ng-change="CheckinNightSelectedclick($index)" ng-model="a.Key" ng-options="hour.Name for hour in a.Hours"></select>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="text" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="a.Value">

                                                    </div>
                                                    <div class="form-group">

                                                        <a href="#" class="btn btn-default  btn-circle btn-xs smaller" ng-click="CheckinNightRemoveclick($index)">
                                                            <i class="glyphicon glyphicon-remove"></i>
                                                        </a>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="widget">
                                            <div class="widget-header">
                                                <span class="widget-caption">
                                                    <i class="glyphicon glyphicon-plus-sign"></i>
                                                Phụ thu  thêm khách</span>
                                            </div>
                                            <div class="widget-body">
                                                <div class="form-inline">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control input-short input-xs " placeholder="Giá theo tháng" ng-model="Name">
                                                    </div>
                                                    <div class="form-group">

                                                        <input type="text" class="form-control input-xs" placeholder="Giá theo tháng" ng-model="Name">


                                                    </div>
                                                    <div class="form-group">

                                                        <a href="#" class="btn btn-default  btn-circle btn-xs smaller">
                                                            <i class="glyphicon glyphicon-remove"></i>
                                                        </a>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-blue active" ng-click="AddCategory()">Cập nhập</button>
                    <button type="button" class="btn btn-default active" data-dismiss="modal">Hủy</button>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>





</div>

<!-- /Page Content -->
@section Scripts {
    <!--Page Related Scripts-->
    <script src="/Content/assets/js/datatable/jquery.dataTables.min.js"></script>
    <script src="/Content/assets/js/datatable/ZeroClipboard.js"></script>
    <script src="/Content/assets/js/datatable/dataTables.tableTools.min.js"></script>
    <script src="/Content/assets/js/datatable/dataTables.bootstrap.min.js"></script>
    <script src="/Content/assets/js/datatable/datatables-init.js"></script>
    <!--Page Related Scripts-->
    <script src="/Content/assets/js/bootbox/bootbox.js"></script>
    <!--Page Related Scripts-->
    <script src="/Content/assets/js/toastr/toastr.js"></script>

    <script src="~/Scripts/app/Modules/userModule.js"></script>
    <script src="~/Scripts/app/services/categoryservices.js"></script>
    <script src="~/Scripts/app/controllers/CategoryController.js"></script>
    <script>
        InitiateSimpleDataTable.init();
        $(".bootbox-confirm").on('click', function (e) {
            var link = $(this).attr("href"); // "get" the intended link in a var
            e.preventDefault();
            bootbox.confirm("Bạn có chắc không?", function (result) {
                if (result) {
                    window.location = link;
                }
            });
        });
        ActiveMenu('#VanBan', '#TinTuc');



    </script>
}


