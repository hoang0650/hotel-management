
@{
    ViewBag.Title = "Lịch sử giao ca - báo cáo thống kê";
}

<div class="main-content" ng-app="appModule" ng-controller="ReportController">
<div class="page-content">
        <div class="page-content-container">

            <div class="row">

                <div class="col-xs-12">
                    <div class="table-header">
                        Lịch sử giao ca 
                    </div>
                    <div class="dataTables_wrapper" role="grid" ng-init="ShiftHistory()">
                        <table class="table table-hover dataTable">
                            <thead>
                                <tr role="row">
                                    <th>Vào ca</th>
                                    <th>Tên nhân viên</th>
                                    <th>Tiền nhận đầu ca <i>(1)</i></th>
                                    <th>Tiền thu trong ca <i>(2)</i></th>
                                    @*<th>Tiền chi <i>(3)</i></th>*@
                                    <th>Tiền giao quản lý <i>(3)</i></th>
                                    <th>Tiền bàn gia ca <i>(1) + (2)- (3)</i></th>
                                    <th>Ra ca</th>
                                </tr>
                            </thead>

                            <tbody style="border-bottom: none;">
                                <tr ng-repeat="row in ShiftHistories">
                                    <td>{{row.StartTimeView}}</td>
                                    <td>{{row.Email}}</td>
                                    <td class="text-right">
                                        {{row.OpenAmount|number}}
                                    </td>
                                    <td class="text-right">
                                        {{row.ReceiptAmount|number}}
                                    </td>
                                  
                                    @*<td class="text-right">
                                        {{row.DeliveryAmount|number}}
                                    </td>*@
                                    <td class="text-right">
                                        {{row.DeliveryManagerAmount|number}}
                                    </td>
                                    <td class="text-right">{{row.CloseAmount|number}}</td>
                                    <td class="text-right">{{row.EndTimeView}}</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-right"><b>Tổng cộng</b></td>
                                   
                                    <td class="text-right">
                                        <b>  {{ShiftTotal.OpenAmount|number}}</b>
                                    </td>
                                    <td class="text-right">
                                        <b>  {{ShiftTotal.ReceiptAmount|number}}</b>
                                    </td>

                                    <td class="text-right">
                                        <b>  {{ShiftTotal.DeliveryAmount|number}}</b>
                                    </td>
                                    <td class="text-right">
                                        <b> {{ShiftTotal.DeliveryManagerAmount|number}}</b>
                                    </td>
                                    <td class="text-right"><b>{{ShiftTotal.CloseAmount|number}}</b></td>
                                    <td class="text-right"></td>
                                </tr>
                            </tbody>
                           
                        </table>

                    </div>
                    <!-- The Gallery as lightbox dialog, should be a child element of the document body -->


                </div>
            </div>
            
        </div>
        <div class="col-sm-12">
            <div class="col-sm-6">
                <div class="pull-left">
                    <span>Tìm thấy  <span class="total-highlight">{{Filter.Page.total}}</span> lần giao ca </span>
                </div>
            </div>

            <div class="col-sm-6">
                <paging class="small pull-right"
                        page="Filter.Page.currentPage"
                        page-size="Filter.Page.pageSize"
                        total="Filter.Page.total"
                        show-prev-next="true"
                        show-first-last="false"
                        paging-action="ShiftHistoryPagingAct( page, pageSize, total)">
                </paging>
            </div>
        </div>
    </div>
    
</div>
@section Scripts {


    <script src="~/Areas/CPanelAdmin/Script/Report/Report.js"></script>
    <link href="~/Areas/CPanelAdmin/Content/fullcalendar/fullcalendar.min.css" rel="stylesheet" />
    <script src="~/Areas/CPanelAdmin/Script/Paging/paging.js"></script>

}
